<div class="container">

  <% @pictures.each do |picture| %>

    <div class="row">
      <div class="col col-sm-8 col-xs-offset-1 col-xs-10">
        <%= profile_img(picture) %>
        <p><%= picture.description %></p>

        <!-- 対象のパスへ移動する際に id を指定すると
  　      　これだけで移動できる -->
        <%= link_to "編集", edit_picture_path(picture.id), class: "btn btn-default btn-sm btn-primary" %>
        <%= link_to "削除", picture_path(picture.id), method: :delete, data: { confirm: "本当に削除しますか？"}, class: "btn btn-default btn-sm btn btn-danger" %>

      </div>
    </div>

  <% end %>

</div>
